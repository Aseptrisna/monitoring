<!--                    <TextView-->
<!--                        android:id="@+id/valueButtonKipas"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_below="@id/statuskipas"-->
<!--                        android:layout_centerHorizontal="true"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:text=""-->
<!--                        android:textColor="@color/colorAccent"-->
<!--                        android:layout_marginBottom="10dp"-->
<!--                        android:textSize="15sp"/>-->
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                app:cardElevation="10dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
<!--                    <Button-->
<!--                        android:background="@drawable/bg_button"-->
<!--                        android:layout_marginTop="20dp"-->
<!--                        android:id="@+id/btnLampu"-->
<!--                        android:text="Lampu On/Off"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="50dp"/>-->
                    <Button
                        android:background="@drawable/bg_button"
                        android:layout_marginTop="20dp"
                        android:id="@+id/btnLampuon"
                        android:text="Hidupkan Lampu"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                    <Button
                        android:background="@drawable/bg_button"
                        android:layout_marginTop="20dp"
                        android:id="@+id/btnLampuoff"
                        android:text="Matikan Lampu"
                        android:layout_below="@+id/btnLampuon"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutvoltage">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--                    <Button-->
                    <!--                        android:background="@drawable/bg_button"-->
                    <!--                        android:layout_marginTop="20dp"-->
                    <!--                        android:id="@+id/btnKipas"-->
                    <!--                        android:text="Kipas On/Off"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="50dp"/>-->
                    <TextView
                        android:id="@+id/statuskipas"
                        android:gravity="center"
                        android:textColor="@color/c_black"
                        android:layout_width="match_parent"
                        android:text="STATUS KIPAS"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/valueButtonKipas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/statuskipas"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                app:cardElevation="10dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--                    <Button-->
                    <!--                        android:background="@drawable/bg_button"-->
                    <!--                        android:layout_marginTop="20dp"-->
                    <!--                        android:id="@+id/btnLampu"-->
                    <!--                        android:text="Lampu On/Off"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="50dp"/>-->
                    <TextView
                        android:id="@+id/statuslampu"
                        android:gravity="center"
                        android:textColor="@color/c_black"
                        android:layout_width="match_parent"
                        android:text="STATUS LAMPU"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/valueBtnLampu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/statuslampu"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/LinearAkhir"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            tools:ignore="MissingConstraints">
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>